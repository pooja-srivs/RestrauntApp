<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.detail.DetailActivity"
    android:orientation="vertical"
    android:background="@color/light_red">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restaurant Detail"
        android:gravity="center"
        android:padding="@dimen/dimen_15"
        android:textSize="@dimen/font_18"
        android:background="@color/app_color"
        android:textColor="@color/white"
        android:fontFamily="@font/opensans_semibold"/>

    <include
        android:id="@+id/ll_detail_info"
        layout="@layout/rest_info_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_search"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_marginLeft="@dimen/dimen_15"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen_5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_SearchIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="right"
            app:layout_constraintRight_toRightOf="@id/cv_search_ll"
            android:background="@color/app_color">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_search"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_30"
                app:srcCompat="@drawable/ic_search"
                tools:ignore="VectorDrawableCompat"
                android:padding="@dimen/dimen_5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <TextView
                android:id="@+id/tv_searchTitle"
                android:text="Search Items"
                android:gravity="center"
                android:paddingRight="@dimen/dimen_15"
                android:paddingLeft="@dimen/dimen_15"
                android:textSize="@dimen/font_12"
                android:paddingTop="@dimen/dimen_5"
                android:textColor="@color/charcoal_grey_50"
                android:fontFamily="@font/opensans_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_semibold"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/charcoal_grey"
                android:textSize="@dimen/dimen_15"
                android:hint="NE46PN"
                android:paddingBottom="@dimen/dimen_5"
                android:paddingRight="@dimen/dimen_15"
                android:paddingTop="@dimen/dimen_20"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@color/transparent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_15"
        android:nestedScrollingEnabled="false"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>